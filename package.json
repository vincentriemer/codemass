{
  "name": "codeweight",
  "description": "Command-line tool to bring visibilty to changes in your artifact's filesize.",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"No tests yet :(\" ",
    "build": "babel ./src --out-dir ./dist",
    "postbuild": "npm run commit:artifacts",
    "commit": "git-cz",
    "commit:artifacts": "git add dist",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vincentriemer/codeweight.git"
  },
  "author": "Vincent Riemer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vincentriemer/codeweight/issues"
  },
  "homepage": "https://github.com/vincentriemer/codeweight#readme",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-plugin-transform-runtime": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "commitizen": "^2.5.0",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.0.3",
    "rimraf": "^2.5.0",
    "validate-commit-msg": "^1.0.0",
    "semantic-release": "^4.3.5"
  },
  "dependencies": {
    "bluebird": "^3.1.1",
    "cli-table": "^0.3.1",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "filesize": "^3.1.5",
    "glob": "^6.0.4",
    "js-yaml": "^3.5.0",
    "jsonlint": "^1.6.2",
    "resolve": "^1.1.6",
    "simple-git": "^1.21.0",
    "strip-bom": "^2.0.0",
    "strip-json-comments": "^2.0.0"
  },
  "bin": {
    "codeweight": "dist/cli.js"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run build && npm run test",
      "commit-msg": "validate-commit-msg"
    },
    "checksize": {
      "files": [
        {
          "path": "package.json"
        },
        {
          "path": "package.json",
          "gzip": true
        }
      ]
    }
  }
}
